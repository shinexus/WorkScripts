
-- 建立HSCMP表空间
-- 空间大小参考CMP数据取值（2010-09-22）

CREATE TABLESPACE "HSCMP_TBL" DATAFILE '+DATA(DATAFILE)/CLUSTERDB/DATAFILE/HSCMP/HSCMP_TBL' SIZE 20G AUTOEXTEND ON NEXT 100M MAXSIZE UNLIMITED LOGGING EXTENT MANAGEMENT LOCAL SEGMENT SPACE MANAGEMENT AUTO;
CREATE TABLESPACE "HSCMP_IDX" DATAFILE '+DATA(DATAFILE)/CLUSTERDB/DATAFILE/HSCMP/HSCMP_IDX' SIZE 2G AUTOEXTEND ON NEXT 100M MAXSIZE UNLIMITED LOGGING EXTENT MANAGEMENT LOCAL SEGMENT SPACE MANAGEMENT AUTO;
CREATE TABLESPACE "HSCMP_TBL_LOG" DATAFILE '+DATA(DATAFILE)/CLUSTERDB/DATAFILE/HSCMP/HSCMP_TBL_LOG' SIZE 1G AUTOEXTEND ON NEXT 100M MAXSIZE UNLIMITED LOGGING EXTENT MANAGEMENT LOCAL SEGMENT SPACE MANAGEMENT AUTO;
CREATE TABLESPACE "HSCMP_TBL_STK" DATAFILE '+DATA(DATAFILE)/CLUSTERDB/DATAFILE/HSCMP/HSCMP_TBL_STK' SIZE 4G AUTOEXTEND ON NEXT 100M MAXSIZE UNLIMITED LOGGING EXTENT MANAGEMENT LOCAL SEGMENT SPACE MANAGEMENT AUTO;
CREATE TABLESPACE "HSCMP_TBL_SAL" DATAFILE '+DATA(DATAFILE)/CLUSTERDB/DATAFILE/HSCMP/HSCMP_TBL_SAL' SIZE 4G AUTOEXTEND ON NEXT 100M MAXSIZE UNLIMITED LOGGING EXTENT MANAGEMENT LOCAL SEGMENT SPACE MANAGEMENT AUTO;
CREATE TEMPORARY TABLESPACE "HSCMP_TEMP" TEMPFILE '+DATA(DATAFILE)/CLUSTERDB/DATAFILE/HSCMP/HSCMP_TEMP' SIZE 4G AUTOEXTEND ON NEXT 100M MAXSIZE UNLIMITED EXTENT MANAGEMENT LOCAL UNIFORM SIZE 1M;

-- 海信方面指出，此表空间及其用户非必需 
